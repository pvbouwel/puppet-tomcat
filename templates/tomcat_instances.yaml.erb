<%
tomcat_base_path = @basedir
tomcat_version_path = @tomcat_version_path
  
-%>
<% if @tomcat_instances_hash -%>
tomcat_instances:
<% tomcat_instances_hash.each_pair do |tomcat_instance_name, tomcat_instance_hash| -%>
  <%=tomcat_instance_name.lstrip%>:
<% 
  tomcat_instance_base_path = tomcat_base_path 
  tomcat_instance_version_path = tomcat_version_path
  if tomcat_instance_hash.has_key?('basedir')
    tomcat_instance_base_path = tomcat_instance_hash['basedir'] 
  end
  
  tomcat_path = tomcat_instance_base_path + '/' + tomcat_instance_name + '/' + tomcat_instance_version_path 
  tomcat_path_logs = tomcat_path + '/logs'
  if tomcat_instance_hash.has_key?('logdir')
    tomcat_path_logs = tomcat_instance_hash['logdir'] 
  end
-%>
    username:       <%= tomcat_instance_hash['user'] %>
    tomcat_server:  <%= @fqdn %> 
    tomcat_webapps: <%= tomcat_path %>/webapps
    tomcat_bin:     <%= tomcat_path %>/bin
    tomcat_libs:    <%= tomcat_path %>/libs
    tomcat_logs:    <%= tomcat_path_logs %>
<% end %>
<% else %>
{}
<% end %>